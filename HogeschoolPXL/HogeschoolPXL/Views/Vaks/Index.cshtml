@model IEnumerable<HogeschoolPXL.Models.Vak>

@{
    ViewData["Title"] = "Index";
}

<h1>lijts van vakken </h1>
<br />
<form  asp-action="Index" method="get" class="search" >
  <p class="midden">title:</p>  @Html.TextBox("Search") <input class="form-control mr-sm-2" type="submit" value="Search" type="Search" style="width: auto;"/>
 </form>
 <br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VakNaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudiePunten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandboekID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VakNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudiePunten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Handboek.Titel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VakId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VakId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VakId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
