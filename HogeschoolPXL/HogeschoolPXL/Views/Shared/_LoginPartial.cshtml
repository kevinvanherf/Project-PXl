@using HogeschoolPXL.Data;
@using HogeschoolPXL.Data.DefaultData;
@using Microsoft.AspNetCore.Identity
@inject HogeschoolPXLDbContext context
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
	var VollName ="";
	var user = context.Users.Where(x => x.UserName == User.Identity.Name).Select(x=> x.Email).FirstOrDefault();
	var naam = @context.Gebruiker.Where(x => x.Email == user).FirstOrDefault();
	if (naam != null)
	 VollName = $"{@naam.VoorNaam}  {@naam.Naam} ";
}

	<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">

			<a  class="nav-link text-dark "   title="Manage">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
					<path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
					 </svg>@if ( naam != null)
				{
					@VollName
				}
				else
				{
					 @User.Identity?.Name
					
				}
		    </a>
				
			
		</li>
		<li class="nav-item">
			
			<a class="nav-link text-dark" asp-controller="Account"
			asp-action="Logout"><img src="~/images/001-log-out.png" style="height:18px"/> Log out</a>

		</li>
		@if (User.IsInRole(Roles.Admin))
		{
			
		
			<li class="nav-item">
				<a class="nav-link text-dark" asp-controller="Account"
			asp-action="Index">Acounts</a>
			</li>
		}
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account"
				asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account"
				asp-action="Login">Login</a>
		</li>
	}
</ul>

